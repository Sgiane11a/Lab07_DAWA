<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/css/materialize.min.css">
    <title>Mi Perfil</title>
</head>
<body>
    
    <script src="/js/auth-guard.js"></script>

    <nav>
        <div class="nav-wrapper teal">
            <a href="/dashboard" class="brand-logo" style="padding-left: 20px;">Mi App</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/dashboard">Dashboard</a></li>
                <li id="admin-dashboard-link" style="display: none;"><a href="/admin/dashboard">Admin Dashboard</a></li>
                <li><a href="#" id="logout-button">Cerrar Sesión</a></li>
            </ul>
        </div>
    </nav>

    <main class="container" style="padding-top: 2rem;">
        <div class="row">
            <div class="col s12 m10 offset-m1 l8 offset-l2">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title"><h4>Mi Perfil</h4></span>
                        <div class="divider"></div>

                        <div id="view-profile-section" class="section">
                            <div class="progress">
                                <div class="indeterminate"></div>
                            </div>
                        </div>

                        <div id="edit-profile-section" class="section" style="display: none;">
                            <form id="edit-profile-form">
                                <div class="input-field">
                                    <input id="name" name="name" type="text" required>
                                    <label for="name">Nombre</label>
                                </div>
                                <div class="input-field">
                                    <input id="lastName" name="lastName" type="text" required>
                                    <label for="lastName">Apellido</label>
                                </div>
                                <div class="input-field">
                                    <input id="phoneNumber" name="phoneNumber" type="tel" required>
                                    <label for="phoneNumber">Teléfono</label>
                                </div>
                                <div class="input-field">
                                    <input id="address" name="address" type="text">
                                    <label for="address">Dirección</label>
                                </div>
                                <button class="btn waves-effect waves-light green" type="submit">
                                    Guardar Cambios <i class="material-icons right">save</i>
                                </button>
                                <button id="cancel-edit-button" class="btn waves-effect waves-light red" type="button">
                                    Cancelar <i class="material-icons right">cancel</i>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="card-action">
                        <button id="edit-profile-button" class="btn waves-effect waves-light blue">
                            Editar Perfil
                            <i class="material-icons right">edit</i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <script src="/js/materialize.min.js"></script>
    <script src="/js/profile.js"></script>
</body>
</html>